# i3 config file
# by Jan Fecht

set $TERMINAL terminator

#exec --no-startup-id display-visor -f -l

# general settings
default_orientation auto
font pango:System San Francisco Display 08
no_focus [window_role="pop-up"]
for_window [window_role="pop-up"] floating enable


# for the ten finger tipping screen
##for_window [instance="feh"] floating enable
##for_window [instance="feh"] resize set 800 300
##for_window [instance="feh"] move scratchpad
##for_window [instance="feh"] border pixel 2
##exec --no-startup-id feh ~/.config/i3/zehnfinger.png

## quick terminal
exec --no-startup-id mate-terminal
for_window [instance="mate-terminal"] floating enable;
for_window [instance="mate-terminal"] move scratchpad; [instance="metask"] scratchpad show; move position 0px 22px; resize shrink height 300px; resize grow width 683px; move scratchpad

## for_window [instance="dropdown"] floating enable
## for_window [instance="dropdown"] resize set 625 400
## for_window [instance="dropdown"] move scratchpad
## for_window [instance="dropdown"] border pixel 3
#exec -a dropdown --no-startup-id $TERMINAL

# gaps settings
for_window [class="^.*"] border pixel 0
gaps inner 0
gaps outer 0


exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id dunst

# Variables 
set $mod Mod4
set $up k
set $down j
set $left h
set $right l


# startup apps
## exec --no-startup-id compton
exec --no-startup-id i3-msg 'workspace 2; exec firefox; workspace 1'
exec --no-startup-id i3-msg 'workspace 1; exec lollypop; workspace 1'
## exec --no-startup-id i3-msg 'workspace 8; exec $TERMINAL -e "vim /home/fecht/TODO.txt"; workspace 1'
exec --no-startup-id nm-applet
##exec --no-startup-id i3-msg 'workspace 8; exec gnome-pomodoro; workspace 1'

# change caps to escape
#exec "setxkbmap -option caps:escape"

#set $xkbcomp "xkbcomp -w 0 ~/.config/xkb/xkbmap $DISPLAY -o ~/.config/xkb/xkbmap.xkm"
set $xkbcomp "xkbcomp -w 0 ~/.config/xkb/xkbmap $DISPLAY"
exec $xkbcomp

# lock after 10 min
exec --no-startup-id xautolock -locker "~/bin/lock.sh screenshot" -time 10 -detectsleep -notify 10

# set background
exec ~/.fehbg

exec_always --no-startup-id "xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Natural Scrolling Enabled' 1"





# last exec to lock screen
exec ~/bin/lock.sh 


#special launcher mode
set $mode_launcher Launch: [f]irefox [t]hunderbird [k]eepassx [s]lack
mode "$mode_launcher" {
	bindsym f exec firefox; mode "default"
	bindsym t exec thunderbird; mode "default"
	bindsym k exec keepassx; mode "default"
	bindsym s exec slack; mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

set $mode_language_key Keyboard: [c]ustom [e]spanol [g]erman [p]]olish
mode "$mode_language_key" {

	bindsym c exec $xkbcomp; exec "notify-send 'Keyboard layout: Custom'"; mode "default"
	bindsym d exec $xkbcomp; exec "notify-send 'Keyboard layout: Custom'"; mode "default"

	bindsym e exec "setxkbmap -layout es"; exec "notify-send 'Keyboard layout: Spanish'"; mode "default"
	bindsym g exec "setxkbmap -layout de"; exec "notify-send 'Keyboard layout: German'"; mode "default"
	bindsym p exec "setxkbmap -layout pl"; exec "notify-send 'Keyboard layout: Polish'"; mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}


# Key Bindings


# Basic Movement

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

##bindsym $mod+Left focus left
##bindsym $mod+Down focus down
##bindsym $mod+Up focus up
##bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

##bindsym $mod+Shift+Left move left
##bindsym $mod+Shift+Down move down
##bindsym $mod+Shift+Up move up
##bindsym $mod+Shift+Right move right

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10





